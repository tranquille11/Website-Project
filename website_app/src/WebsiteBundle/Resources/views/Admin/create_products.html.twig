{% extends 'WebsiteBundle:Admin:dashboard.html.twig' %}
{% block content %}
    <div class="admin-main">
        <h4 class="product-admin-header"> Create product </h4>
        <p style="margin:0; padding:0; margin-top:2em;"><span style=" color:red; font-weight: bold;">Please make sure you increment the SKU number when creating a new product!</span>
        </p>
        {% if lastSKU %}
            <p style="margin:0; margin-top:1em">Last item created was {{ lastSKU.name }} with SKU <b><u>{{ lastSKU.SKU }}</u></b> on {{ lastSKU.CREATED_AT }}</p>
        {% endif %}
        <form class="admin-product-form" method="post" action="{{ path('create-products') }}">
            <div class="form-group create-product-form">
                <label for="exampleFormControlInput1"></label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="product name"
                       name="name" required>
            </div>
            <div class="form-group create-product-form">
                <input type="text" class="form-control" name="price" placeholder="price" required>
            </div>
            <div class="form-group create-product-form">
                <input type="text" class="form-control" name="SKU" placeholder="SKU" required>
            </div>
            <div class="form-group create-product-form">
                <label for="exampleFormControlTextarea1"></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                          placeholder="description" name="description" required></textarea>
            </div>
            <div class="form-group create-product-form">
                <label>
                    <select name="category" class="form-control">
                        {% for item in categories %}
                            {% if item.id < 6 and item.id > 0 and item.name != 'Women' %}
                                <option value="{{ item.id }}">Women - {{ item.name }}</option>
                            {% elseif item.id > 6 and  item.id < 9 and item.name != 'Kids' %}
                                <option value="{{ item.id }}">Kids - {{ item.name }}</option>
                            {% elseif item.id > 8 and  item.name != 'Men' %}
                                <option value="{{ item.id }}">Men - {{ item.name }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                </label>
            </div>
            <div>
                <button class="create-product-button" type="submit" name="create_product">Create product</button>
            </div>
        </form>
    </div>

{% endblock %}